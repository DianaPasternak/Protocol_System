@model ProtocolSystem.Models.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="~/css/site.css" />
<h2 style="text-align: center">Реєстрація користувача</h2>
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" class="form">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Введіть логін </label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Логін" />
            <span asp-validation-for="Email" />
        </div>
        
        <div class="form-group">
            <label asp-for="Password">Введіть пароль</label>
            <input id='first_pass' asp-for="Password" class="form-control" placeholder="Пароль" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Введіть пароль</label>
            <input id="second_pass" asp-for="ConfirmPassword" class="form-control" placeholder="Повторіть пароль" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-group">
            <input type="submit" value="Зареєструвати" class="btn btn-lg btn-primary btn-block" />
        </div>
    </div>
</form>
