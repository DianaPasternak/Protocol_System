@{
    ViewData["Title"] = "Login";
    Layout = null;
}
@using System.Security.Claims

<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Automated Protocols</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" href="favicon.ico">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700" rel="stylesheet">

    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/css/icomoon.css">
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/flexslider.css">
    <link rel="stylesheet" href="~/css/style.css">
    <script src="~/js/modernizr-2.6.2.min.js"></script>

</head>
<body>
    <div id="fh5co-page">
        <a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle"><i></i></a>
        <aside id="fh5co-aside" role="complementary" class="border js-fullheight">

            <h1 id="fh5co-logo"><a asp-action="Welcome" asp-controller="Home">Система складання протоколів</a></h1>
            <nav id="fh5co-main-menu" role="navigation">
                <ul>

                    <li class="fh5co-active"><a asp-action="Index" asp-controller="Home">Інформація про протоколи</a></li>

                    @if (User.Identity.IsAuthenticated && User.FindFirst(x => x.Type == ClaimsIdentity.DefaultRoleClaimType).Value == "Policeman")
                    {
                        <li class="fh5co-active"><a asp-action="All" asp-controller="Protocol">Усі протоколи</a></li>
                        <li class="fh5co-active"><a asp-action="CreatedProtocols" asp-controller="Protocol">Створені протоколи</a></li>
                        <li class="fh5co-active"><a asp-action="Create" asp-controller="Protocol">Створити Адмінпротокол</a></li>
                        <li class="fh5co-active"><a asp-action="ChangePass" asp-controller="Account">Редагувати профіль</a></li>
                        <li><a asp-controller="Account" asp-action="Logout">Вийти</a></li>
                    }
                    @if (User.Identity.IsAuthenticated && User.FindFirst(x => x.Type == ClaimsIdentity.DefaultRoleClaimType).Value == "Citizen")
                    {
                        <li class="fh5co-active"><a asp-action="MyProtocols" asp-controller="Protocol">Мої протоколи</a></li>
                        <li class="fh5co-active"><a asp-action="CreatedProtocols" asp-controller="Protocol">Створені протоколи</a></li>
                        <li class="fh5co-active"><a asp-action="CreateEuro" asp-controller="Protocol">Створити Європротокол</a></li>
                        <li class="fh5co-active"><a asp-action="ChangePass" asp-controller="Account">Редагувати профіль</a></li>
                        <li><a asp-controller="Account" asp-action="Logout">Вийти</a></li>
                    }
                    @if (User.Identity.IsAuthenticated && User.FindFirst(x => x.Type == ClaimsIdentity.DefaultRoleClaimType).Value == "Admin")
                    {

                        <li class="fh5co-active"><a asp-action="RegisterPoliceman" asp-controller="Account">Додати працівника поліції</a></li>
                        <li><a asp-controller="Account" asp-action="Logout">Вийти</a></li>
                    }
                    @if (User.Identity.IsAuthenticated == false)
                    {
                        <li class="fh5co-active"><a asp-action="Login" asp-controller="Account">Увійти</a></li>
                    }
                </ul>
            </nav>

            <div class="fh5co-footer">
                <p style="font-size: large;"><small>&copy; 2020 Курсова робота. Всі права захищено.</span> <span>Студентка групи КН-307 <br/>
                    Діана Пастернак </span> </small></p>
            </div>

        </aside>

        <div id="fh5co-main">
            <aside id="fh5co-hero" class="js-fullheight">
                <div class="flexslider js-fullheight">
                    @if (User.Identity.IsAuthenticated == false)
                    {
                        <ul class="slides">
                            <li style="background-image: url(images/dtp.jpg);">
                                <div class="overlay"></div>
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-8 col-md-offset-2 text-center js-fullheight slider-text">
                                            <div class="slider-text-inner">
                                                <h1>Європротокол — спеціальний уніфікований бланк, поширений на території Європи, зокрема Європейського Союзу, який заповнюється учасниками дорожньо-транспортної пригоди.</h1>
                                                <p><a class="btn btn-primary btn-demo popup-vimeo" asp-action="Login" asp-controller="Account"> <i class="icon-monitor"></i> Скласти Європротокол</a> <a class="btn btn-primary btn-learn" asp-action="Index" asp-controller="Home">Дізнатися більше<i class="icon-arrow-right3"></i></a></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li style="background-image: url(images/police1.jpg);">
                                <div class="overlay"></div>
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-8 col-md-offset-2 text-center js-fullheight slider-text">
                                            <div class="slider-text-inner">
                                                <h1>Протокол про адміністративне правопорушення – це процесуальний документ, який є підставою для розгляду та вирішення справи про адміністративне правопорушення</h1>
                                                <p><a class="btn btn-primary btn-demo popup-vimeo" asp-action="Login" asp-controller="Account"> <i class="icon-monitor"></i> Скласти Адмінпротокол</a> <a class="btn btn-primary btn-learn" asp-action="Index" asp-controller="Home">Дізнатися більше<i class="icon-arrow-right3"></i></a></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    }
                    @if (User.Identity.IsAuthenticated && User.FindFirst(x => x.Type == ClaimsIdentity.DefaultRoleClaimType).Value == "Citizen")
                    {
                        <ul class="slides">
                            <li style="background-image: url(images/dtp.jpg);">
                                <div class="overlay"></div>
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-8 col-md-offset-2 text-center js-fullheight slider-text">
                                            <div class="slider-text-inner">
                                                <h1>Європротокол — спеціальний уніфікований бланк, поширений на території Європи, зокрема Європейського Союзу, який заповнюється учасниками дорожньо-транспортної пригоди.</h1>
                                                <p><a class="btn btn-primary btn-demo popup-vimeo" asp-action="CreateEuro" asp-controller="Protocol"> <i class="icon-monitor"></i> Скласти Європротокол</a> <a class="btn btn-primary btn-learn" asp-action="Index" asp-controller="Home">Дізнатися більше<i class="icon-arrow-right3"></i></a></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    }
                    @if (User.Identity.IsAuthenticated && User.FindFirst(x => x.Type == ClaimsIdentity.DefaultRoleClaimType).Value == "Policeman")
                    {
                        <ul class="slides">
                            <li style="background-image: url(images/police1.jpg);">
                                <div class="overlay"></div>
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-8 col-md-offset-2 text-center js-fullheight slider-text">
                                            <div class="slider-text-inner">
                                                <h1>Протокол про адміністративне правопорушення – це процесуальний документ, який є підставою для розгляду та вирішення справи про адміністративне правопорушення</h1>
                                                <p><a class="btn btn-primary btn-demo popup-vimeo" asp-action="Create" asp-controller="Protocol"> <i class="icon-monitor"></i> Скласти Адмінпротокол</a> <a class="btn btn-primary btn-learn" asp-action="Index" asp-controller="Home">Дізнатися більше<i class="icon-arrow-right3"></i></a></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    }
                    @if (User.Identity.IsAuthenticated && User.FindFirst(x => x.Type == ClaimsIdentity.DefaultRoleClaimType).Value == "Admin")
                    {
                        <ul class="slides">
                            <li style="background-image: url(images/dtp.jpg);">
                                <div class="overlay"></div>
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-8 col-md-offset-2 text-center js-fullheight slider-text">
                                            <div class="slider-text-inner">
                                                <h1>Європротокол — спеціальний уніфікований бланк, поширений на території Європи, зокрема Європейського Союзу, який заповнюється учасниками дорожньо-транспортної пригоди.</h1>
                                                <p> <a class="btn btn-primary btn-learn" asp-action="Index" asp-controller="Home">Дізнатися більше<i class="icon-arrow-right3"></i></a></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    }
                </div>
            </aside>

        </div>
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.waypoints.min.js"></script>
    <script src="~/js/jquery.flexslider-min.js"></script>

    <script src="~/js/main.js"></script>

</body>
</html>

